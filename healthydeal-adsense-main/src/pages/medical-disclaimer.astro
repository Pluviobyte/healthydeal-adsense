---
import BaseLayout from '../layouts/BaseLayout.astro';
import { buildSeoMeta, canonicalFromPath } from '../utils/seo';

const site = Astro.site?.toString() ?? 'https://www.gencoser.com';
const url = canonicalFromPath(site, '/medical-disclaimer/');

const seo = buildSeoMeta({
  title: 'Medical Disclaimer',
  description:
    'Content is for informational and educational purposes only and is not a substitute for professional medical advice, diagnosis, or treatment.',
  url
});

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Medical Disclaimer',
  url,
  publisher: {
    '@type': 'Organization',
    name: 'Healthy Meal Hub'
  }
};
---
<BaseLayout
  title={seo.title}
  description={seo.description}
  canonical={seo.canonical}
  meta={seo.meta}
  structuredData={structuredData}
  bodyClass="policy-page"
>
  <section class="bg-gradient-to-b from-white to-slate-50">
    <div class="mx-auto w-full max-w-4xl space-y-6 px-4 py-12 md:py-16">
      <header class="space-y-3">
        <h1 class="text-3xl font-bold text-slate-900 md:text-4xl">Medical Disclaimer</h1>
        <p class="text-lg text-slate-600">
          The information on this website is for informational and educational purposes only and is not intended as medical advice.
        </p>
      </header>

      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm space-y-4 text-slate-700">
        <p>
          Always consult a qualified healthcare professional before making changes to your diet, exercise routine, or lifestyle, especially if you have underlying health conditions or are taking medications.
        </p>
        <p>
          While we strive for accuracy, nutrition information evolves and individual needs vary. No content on this site guarantees outcomes or replaces personalized medical care.
        </p>
        <p>
          If you are experiencing a medical emergency, call your local emergency number immediately.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

