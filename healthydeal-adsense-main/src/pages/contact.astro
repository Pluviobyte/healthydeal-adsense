---
import BaseLayout from '../layouts/BaseLayout.astro';
import AdSlot from '../components/AdSlot.astro';
import { buildSeoMeta, canonicalFromPath } from '../utils/seo';

const site = Astro.site?.toString() ?? 'https://www.gencoser.com';
const url = canonicalFromPath(site, '/contact/');

const seo = buildSeoMeta({
  title: 'Contact Healthy Meal Hub',
  description: 'Questions about meal prep, partnership opportunities, or editorial feedback? Reach out to the Healthy Meal Hub team.',
  url
});
---
<BaseLayout
  title={seo.title}
  description={seo.description}
  canonical={seo.canonical}
  meta={seo.meta}
  bodyClass="contact-page"
>
  <section class="bg-gradient-to-b from-white to-slate-50">
    <div class="mx-auto w-full max-w-3xl space-y-8 px-4 py-12 md:py-16">
      <header class="space-y-3 text-center">
        <h1 class="text-3xl font-bold text-slate-900 md:text-4xl">Contact the team</h1>
        <p class="text-lg text-slate-600">
          Weâ€™d love to hear how we can support your healthy eating routine. Use the form below or email us directly at
          <a class="text-primary underline" href="mailto:hello@healthymealhub.com"> hello@healthymealhub.com</a>.
        </p>
      </header>

      <AdSlot position="top" enabled={true} />

      <form
        method="post"
        action="https://formspree.io/f/your-form-id"
        class="space-y-4 rounded-3xl border border-slate-200 bg-white p-8 shadow-sm"
      >
        <div>
          <label class="text-sm font-semibold text-slate-700" for="name">Name</label>
          <input
            id="name"
            name="name"
            type="text"
            required
            class="mt-1 w-full rounded-lg border border-slate-200 px-4 py-3 text-sm text-slate-700 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20"
          />
        </div>
        <div>
          <label class="text-sm font-semibold text-slate-700" for="email">Email</label>
          <input
            id="email"
            name="_replyto"
            type="email"
            required
            class="mt-1 w-full rounded-lg border border-slate-200 px-4 py-3 text-sm text-slate-700 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20"
          />
        </div>
        <div>
          <label class="text-sm font-semibold text-slate-700" for="topic">Topic</label>
          <select
            id="topic"
            name="topic"
            class="mt-1 w-full rounded-lg border border-slate-200 px-4 py-3 text-sm text-slate-700 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20"
          >
            <option>Editorial feedback</option>
            <option>Partnership inquiry</option>
            <option>Advertising &amp; affiliate</option>
            <option>Meal prep question</option>
            <option>Other</option>
          </select>
        </div>
        <div>
          <label class="text-sm font-semibold text-slate-700" for="message">Message</label>
          <textarea
            id="message"
            name="message"
            rows={5}
            required
            class="mt-1 w-full rounded-lg border border-slate-200 px-4 py-3 text-sm text-slate-700 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20"
          ></textarea>
        </div>
        <button
          type="submit"
          class="w-full rounded-full bg-primary px-6 py-3 text-sm font-semibold text-white transition-colors duration-150 hover:bg-primary-dark"
        >
          Send message
        </button>
        <p class="text-xs text-slate-400">
          We respond within 2 business days. For urgent media requests, email <a class="text-primary" href="mailto:press@healthymealhub.com">press@healthymealhub.com</a>.
        </p>
      </form>

      <AdSlot position="bottom" enabled={true} />
    </div>
  </section>
</BaseLayout>
