---
import BaseLayout from '../layouts/BaseLayout.astro';
import { buildSeoMeta, canonicalFromPath } from '../utils/seo';

const site = Astro.site?.toString() ?? 'https://www.gencoser.com';
const url = canonicalFromPath(site, '/editorial-policy/');

const seo = buildSeoMeta({
  title: 'Editorial Policy',
  description:
    'Learn how we research, write, review, and update our content. Our editorial standards prioritize accuracy, clarity, and reader trust.',
  url
});

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Editorial Policy',
  url,
  publisher: {
    '@type': 'Organization',
    name: 'Healthy Meal Hub'
  }
};
---
<BaseLayout
  title={seo.title}
  description={seo.description}
  canonical={seo.canonical}
  meta={seo.meta}
  structuredData={structuredData}
  bodyClass="policy-page"
>
  <section class="bg-gradient-to-b from-white to-slate-50">
    <div class="mx-auto w-full max-w-4xl space-y-6 px-4 py-12 md:py-16">
      <header class="space-y-3">
        <h1 class="text-3xl font-bold text-slate-900 md:text-4xl">Editorial Policy</h1>
        <p class="text-lg text-slate-600">
          Our editorial process emphasizes credibility, usefulness, and transparency. Below is how we research, review, and update our content.
        </p>
      </header>

      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm space-y-6 text-slate-700">
        <section>
          <h2 class="text-xl font-semibold text-slate-900">Research and Sources</h2>
          <p class="mt-2">We reference peer-reviewed studies, reputable institutions, and registered dietitian guidance. Links to primary sources are provided where relevant.</p>
        </section>

        <section>
          <h2 class="text-xl font-semibold text-slate-900">Review and Accuracy</h2>
          <p class="mt-2">Every guide is edited for clarity and accuracy by our editorial team. For health-related content, we consult qualified professionals as needed.</p>
        </section>

        <section>
          <h2 class="text-xl font-semibold text-slate-900">Updates and Revisions</h2>
          <p class="mt-2">We periodically update articles to reflect new research, seasonal relevance, and user feedback. Each article displays published and updated dates.</p>
        </section>

        <section>
          <h2 class="text-xl font-semibold text-slate-900">Independence and Affiliates</h2>
          <p class="mt-2">Affiliate relationships do not influence our recommendations. See our <a href="/affiliate-disclosure/" class="text-primary hover:underline">Affiliate Disclosure</a> for details.</p>
        </section>
      </div>
    </div>
  </section>
</BaseLayout>

