---
import BaseLayout from '../layouts/BaseLayout.astro';
import { buildSeoMeta, canonicalFromPath } from '../utils/seo';

const site = Astro.site?.toString() ?? 'https://www.gencoser.com';
const url = canonicalFromPath(site, '/affiliate-disclosure/');

const seo = buildSeoMeta({
  title: 'Affiliate Disclosure',
  description:
    'We may earn a commission when you purchase through links on our site at no extra cost to you. Our recommendations are based on research and testing.',
  url
});

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Affiliate Disclosure',
  url,
  publisher: {
    '@type': 'Organization',
    name: 'Healthy Meal Hub'
  }
};
---
<BaseLayout
  title={seo.title}
  description={seo.description}
  canonical={seo.canonical}
  meta={seo.meta}
  structuredData={structuredData}
  bodyClass="policy-page"
>
  <section class="bg-gradient-to-b from-white to-slate-50">
    <div class="mx-auto w-full max-w-4xl space-y-6 px-4 py-12 md:py-16">
      <header class="space-y-3">
        <h1 class="text-3xl font-bold text-slate-900 md:text-4xl">Affiliate Disclosure</h1>
        <p class="text-lg text-slate-600">
          Some links on this website are affiliate links. This means we may earn a commission if you purchase through these links at no additional cost to you.
        </p>
      </header>

      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm space-y-4 text-slate-700">
        <p>
          We only recommend products and services that we genuinely find useful based on research, testing, and alignment with our editorial guidelines. Affiliate partnerships do not influence our recommendations, content prioritization, or conclusions.
        </p>
        <p>
          All affiliate links are clearly disclosed in context, and we strive to provide balanced information including pros, cons, and alternatives when relevant.
        </p>
        <p>
          Your support through these links helps us maintain and expand our free content, tools, and educational resources. We appreciate your trust.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

