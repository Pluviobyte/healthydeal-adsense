---
import Nav from './Nav.astro';

interface HeaderProps {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props as HeaderProps;
---
<header class="border-b border-slate-200 bg-white/80 backdrop-blur">
  <div class="mx-auto flex w-full max-w-6xl flex-col gap-4 px-4 py-6 lg:flex-row lg:items-center lg:justify-between">
    <div>
      <a href="/" class="flex items-center gap-3">
        <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-primary text-white font-bold">HM</span>
        <span class="flex flex-col">
          <span class="text-lg font-bold text-slate-900">Healthy Meal Hub</span>
          <span class="text-sm text-slate-500">Clean eating guides, plans &amp; recipes</span>
        </span>
      </a>
    </div>
    <Nav currentPath={currentPath} />
  </div>
</header>
