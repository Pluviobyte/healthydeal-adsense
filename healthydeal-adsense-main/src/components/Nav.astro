---
interface NavProps {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props as NavProps;

const navItems = [
  { href: '/healthy-eating/', label: 'Healthy Eating' },
  { href: '/clean-eating/', label: 'Clean Eating' },
  { href: '/meal-prep/', label: 'Meal Prep' },
  { href: '/healthy-recipes/', label: 'Healthy Recipes' },
  { href: '/about/', label: 'About' },
  { href: '/contact/', label: 'Contact' }
];
---
<nav aria-label="Primary" class="w-full">
  <ul class="flex flex-wrap items-center gap-4 text-sm font-semibold text-slate-600 md:gap-6">
    {navItems.map((item) => {
      const isActive =
        item.href === '/'
          ? currentPath === '/'
          : currentPath.startsWith(item.href);
      return (
        <li>
          <a
            href={item.href}
            class={`rounded-full px-3 py-2 transition-colors duration-150 hover:text-primary ${
              isActive ? 'bg-primary/10 text-primary' : ''
            }`}
          >
            {item.label}
          </a>
        </li>
      );
    })}
  </ul>
</nav>
